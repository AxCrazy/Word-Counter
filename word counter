	private void btnFindWordActionPerformed(java.awt.event.ActionEvent evt) {
		/*
		 * Declare two Strings; one to get and hold the text in the text area,
		 * and //the second to get the word entered in the 'Enter word' text
		 * field.
		 */
		String text = txtArea.getText();
		String word = txtEnterWord.getText();
		// Create a character array so we can manipulate and search for words.
		String textArray = txtArea.getText().toString();
		char[] wordsArray = textArray.toCharArray();
		// If the text area contains the word we searched for;
		if (text.contains(word)) {
			// Loop through to find the word
			for (int i = 0; i < wordsArray.length; i++) {
				// Declare two int's for the words start and end.
				int position = text.indexOf(word);
				int end = txtEnterWord.getText().length();
				// Call the request focus method and select methods to highlight
				// the word.
				txtArea.requestFocus();
				txtArea.select(position, (end + position));
				// Display in the Status field the word and its position in the
				// correct colour
				txtStatus.setText(word + " is at position " + position);
				txtStatus.setForeground(Color.BLUE);
			}// If the word is not found
		} else {
			txtStatus.setText("Word not found");
			// Set in red font as instructed
			txtStatus.setForeground(Color.RED);
		}
		// If there is no word entered into 'Enter Word', no action should be
		// taken.
		if (txtEnterWord.getText().isEmpty()) {
			clearFields();
		}
	}

	private void btnWordCountActionPerformed(java.awt.event.ActionEvent evt) {
		// Count the number of words and display in the correct field.
		String words = txtArea.getText();
		String[] wordcount = words.split("\\s");
		txtWords.setText(String.format("%d", wordcount.length));

		// Count the number of characters including spaces and display in the
		// correct field.
		String lettersWithSpaces = txtArea.getText();
		// Replace method to allow us to count spaces.
		String charsWithSpaces = lettersWithSpaces.replace("\n", " ");
		txtWithSpaces.setText(String.format("%d", charsWithSpaces.length()));

		// Count the number of characters without spaces and display in the
		// correct field.
		String lettersWithoutSpaces = txtArea.getText();
		// Create an array of all characters and declare a counter
		char[] allChars = lettersWithoutSpaces.toCharArray();
		int charWithoutSpaces = 0;
		// Loop through the array.
		for (char c : allChars) {
			// If c is not a space, increment the counter.
			if (c != ' ') {
				charWithoutSpaces++;
			}
		}
		txtWithoutSpaces.setText(String.format("%d", charWithoutSpaces));

		// Count the number of paragraphs and display in the correct field.
		String numOfParagraphs = txtArea.getText();
		// Call the split method to count
		String[] paragraphCount = numOfParagraphs.split("\n");
		txtParagraphs.setText(String.format("%d", paragraphCount.length));

		// If the text area is empty, call the clearFields() method
		if (txtArea.getText().isEmpty()) {
			clearFields();
		}
	}

	private void clearFields() {
		// This method is required to clear the text fields and is also called
		// when the user presses the word count button with nothing in the
		// field.

		// Loop through all the components and if a textfield is found, clear
		// it.
		for (Component c : this.getContentPane().getComponents()) {
			if (c instanceof JTextField) {
				((JTextField) c).setText("");
			}
		}
	}

	private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {
		// Call the clearFields() to clear the text area.
		txtArea.setText("");
		clearFields();
	}

